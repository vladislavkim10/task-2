FROM python:3.9-slim #Базовый образ
WORKDIR /app #Рабочая директория внутри контейнера
COPY requirements.txt . #Копирование файла зависимостей внутрь контейнера
RUN pip install --no-cache-dir -r requirements.txt #установка зависимостей без сохранения кэша
COPY app.py . #Копируем нужные файлы внутрь
EXPOSE 5000 #Указываем какой порт используется внутри для документации
CMD ["python", "app.py"] #Команда выполняемая при старте контейнера
